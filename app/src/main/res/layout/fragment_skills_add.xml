<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.home.profile.skillAdd.SkillsAddFragment">

    <AutoCompleteTextView
        android:id="@+id/skills_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:hint="Введите свой навык"
        android:dropDownAnchor="@id/btn_add_skill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_skill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Добавить"
        app:layout_constraintEnd_toEndOf="@+id/skills_edit_text"
        app:layout_constraintStart_toStartOf="@+id/skills_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/skills_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>